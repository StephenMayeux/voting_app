<!DOCTYPE html>
<html>

<head>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.choice_btn').click(function(e) {
        $("#options").append('<input type="text" placeholder="Additional Option" name="new_option">')
      });
    });
  </script>
  <link href="/main.css" rel="stylesheet" type="text/css">
</head>
<nav>
  <p style="margin-left : 8px">VOTE ON IT</p>
</nav>

<body>
  <div class="dashboard">
    <h1>DASHBOARD</h1>
    <p1>Edit the poll</p1>
    <button class="btn_green" type="button">New Poll</button>
    <button class="btn_blue" type="button">My Polls</button>
  </div>
  <div style="text-align : center">
    <h2>Add a new option</h2>
    <h3>Question:</h3>
    <form action="/polls/editpoll/<%= id %>" method="post">
      <input type="text"  value="<%= title %>" name="title" readonly>
      <h3>Choices:</h3>
      <div id="options">
          <% for (var key in options) { %>
           <input type=text value="<%= key %>" name="<%= 'option'  %>" readonly>
        <% } %>
      </div>
      <button type="button" class="choice_btn">New Option</button>
      <button type="submit" id="submit_btn">Save</button>
    </form>
  </div>
</body>

</html>
