<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link href="/main.css" rel="stylesheet" type="text/css">
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
</head>
<nav>
  <p style="margin-left : 8px">VOTE ON IT</p>
</nav>

<body>
  <div class="dashboard">
    <h3>Current Vote Results For:</h3>

    <h1></h1>
  </div>
  <div style="margin: 0 auto; width: 600px;">
    <canvas id="myChart" width="400" height="400"></canvas>

     <script>
          var ctx = document.getElementById("myChart");
          var myChart = new Chart(ctx, {
              type: <%- JSON.stringify(type) %>,
              data: <%- JSON.stringify(data) %>,
              options: <%- JSON.stringify(chart_options) %>
          });
    </script>
  </div>
  <script>
         function backtoPoll(id){
           $.ajax({
                  url: '/polls/takepoll/' + id,
                  type: 'POST',
                  success: function (result) {
                  document.location.href = '/polls/vote/' + id;
                  },
                  error: function () {
                    alert("Cannot find poll. Something went wrong");
                  }
              });
          }
  </script>
  <button onclick="backtoPoll('<%= id %>')"class="choice_btn">Back to Poll</button>
</body>

</html>
